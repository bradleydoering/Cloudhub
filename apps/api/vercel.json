{
  "framework": "nextjs",
  "buildCommand": "cd ../.. && npm install && npx turbo build --filter=@cloudreno/api",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && npm install",
  "devCommand": "npm run dev",
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}